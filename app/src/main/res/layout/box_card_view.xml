<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:padding="1dp"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:textSize="@dimen/box_cardview_title_size"
                android:textColor="@color/box_cardview_title_color"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/box_cardview_description_color"
                android:textSize="@dimen/box_cardview_description_size"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/box_cardview_separator_color"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:visibility="gone">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/box_cardview_normal_button_color"
                    android:textSize="14sp"
                    android:paddingLeft="@dimen/box_cardview_button_horizantal_margin"
                    android:paddingRight="@dimen/box_cardview_button_horizantal_margin"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/box_cardview_normal_button_color"
                    android:textSize="14sp"
                    android:paddingLeft="@dimen/box_cardview_button_horizantal_margin"
                    android:paddingRight="@dimen/box_cardview_button_horizantal_margin"
                    android:background="@android:color/transparent"
                    android:visibility="gone"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</merge>